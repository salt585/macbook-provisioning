root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.ctp]
indent_size = 2
indent_style = space

[*.{rb,erb,slim}]
indent_size = 2
indent_style = space

[*.{html,css,scss,js,coffee}]
indent_size = 2
indent_style = space

[*.{yml,json}]
indent_size = 2
indent_style = space

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false
